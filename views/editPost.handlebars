<div class="row mt-4">
    <div class="col-md-6">
        <h3>Edit a post:</h3>

        <form class="form edit-blog-form" data-id={{post.id}}>
            <div class="form-group">
                <label for="post-title">Blog title:</label>
                <input class="form-input" value="{{post.title}}" type="text" id="edit-post-title" name="post-title" />
            </div>
            <div class="form-group">
                <label for="post-content">Content:</label>
                <textarea class="form-input" id="edit-post-content" name="post-content">{{post.content}}</textarea>
            </div>

            <div class="col-md-6 post-list">
                <h3>Current Blogs:</h3>

                <div class="row mb-2">
                    <div class="col-md-4">
                        <button class="btn btn-sm btn-danger" id="deleteButton" data-id="{{post.id}}">DELETE</button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-sm btn-primary update" data-id="{{post.id}}">UPDATE</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/js/editPost.js"></script>